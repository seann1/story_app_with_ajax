<%= form_for [@user, @story] do |f| %>
<div class="form-group">
  <%= f.label "Title" %>
  <%= f.text_field :title, class: "form-control"%>
</div>
<div class="form-group">
  <%= f.label "Content" %>
  <%= f.text_area :content, class: "form-control" %>
</div>
<%= f.hidden_field :user_id, :value => current_user.id %>
<%= f.submit(:class => "btn btn-primary") %>
<% end %>
